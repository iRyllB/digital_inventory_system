{
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/headers",  // Add this line to include your headers folder
                "${workspaceFolder}/**"  // This ensures the compiler looks in all subdirectories
            ],
            "defines": [],
            "intelliSenseMode": "gcc-x64",
            "compilerPath": "C:/TDM-GCC-64/bin/g++.exe",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "browse": {
                "path": [
                    "${workspaceFolder}/headers", // Add this path for IntelliSense
                    "${workspaceFolder}/src",
                    "${workspaceFolder}/**"
                ],
                "limitSymbolsToIncludedHeaders": true
            }
        }
    ],
    "version": 4
}
